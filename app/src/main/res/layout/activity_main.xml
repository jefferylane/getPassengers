    activity_main.xml

    This file contains the details of all the elements that appear
    on the screen in the main activity.-->

<!--Main Layout-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray">

    <!--Header-->
    <TextView
        android:id="@+id/top_label"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="GET PASSENGERS APP"
        android:textAlignment="center"
        android:textSize="32dp"
        android:layout_marginBottom="10dp"/>

    <!--Button to launch secondary activity, get_passengers.xml-->
    <Button
        android:id="@+id/get_list_button"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:onClick="getList"
        android:text="GET PASSENGER LIST" />

    <!--TextView to display the list of passengers received after returning
        from the secondary activity.-->
    <TextView
        android:id="@+id/show_list"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/yellow"
        android:text="Returned Passenger List:"
        android:textAlignment="center"
        android:layout_margin="10dp"/>

</LinearLayout>